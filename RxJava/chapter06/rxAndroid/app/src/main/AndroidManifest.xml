<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leaf.rxandroid">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".RxAndroid"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activities.HelloActivity"/>
        <activity android:name=".activities.HelloRxAppActivity"/>
        <activity android:name=".activities.HelloActivityComposite">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.LoopActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".activities.HelloActivityV1" />
        <activity android:name=".activities.HelloActivityV2" />
        <activity android:name=".activities.HelloActivityV3" />
        <activity android:name=".FragmentTestActivity">

        </activity>
        <activity android:name=".activities.AsyncTaskActivity" />
        <activity android:name=".activities.TimerActivity" />
    </application>

</manifest>